{
	"languageserver": {
		"rust": {
			"command": "rls",
			"filetypes": ["rust"],
			"rootPatterns": ["Cargo.toml"]
		}
	},
	"languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
