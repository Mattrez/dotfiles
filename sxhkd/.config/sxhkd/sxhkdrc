alt + Return
	$TERMINAL

alt + shift + c
	$TERMINAL -e "python"

alt + shift + m
	$TERMINAL -e "neomutt"

alt + shift + f
	$TERMINAL -e "nnn"

alt + c
	$TERMINAL -e "calcurse"

alt + y
	redshift

alt + p
	dmenu_run

alt + b
	brave

alt + s
	spotify

alt + n
	mypaint

alt + w
	mapradr

alt + shift + s
	pavucontrol

alt + shift + p
	poweroff

alt + Escape
	pkill -USR1 -x sxhkd

Print
	screenshot

XF86AudioRaiseVolume
	pactl set-sink-volume 0 +2%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -2%

XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5
